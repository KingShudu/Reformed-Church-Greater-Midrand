        <script>
            function initMap() {
                var churchLocation = {lat: -34.397, lng: 150.644};
                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 15,
                    center: churchLocation
                });
                var marker = new google.maps.Marker({
                    position: churchLocation,
                    map: map
                });
            }
        </script>
